{
  "name": "int-gw-webhook",
  "owner": "supply",
  "platform": "k8s",
  "ci": "dockyard",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf -G dist",
    "build": "nest build",
    "ci": "nest build",
    "start": "node ./dist/launcher.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "npm run test:all",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "test:all": "jest",
    "rollback": "echo 'Falling back on default behaviour. Rollback if we see any alerts or crashes in the next 5 minutes.'"
  },
  "config": {
    "_comment": "For more configuration options please read https://github.com/holidayextras/microservice-strategy#adding-features-to-your-new-microservice",
    "port": 50056,
    "save-exact": true,
    "capabilities": [
      "http"
    ],
    "template": "nodejs-ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/holidayextras/int-gw-webhook.git"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "10.2.8",
    "@nestjs/microservices": "10.4.7",
    "@nestjs/mongoose": "10.1.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "4.1.1",
    "@nestjs/swagger": "8.0.5",
    "axios": "1.7.7",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-mocha": "10.5.0",
    "eslint-plugin-promise": "7.1.0",
    "helmet": "8.0.0",
    "mongoose": "8.8.3",
    "node-toolbox": "github:holidayextras/node-toolbox#v10.8.5",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@sq-schema/(.*)$": [
        "<rootDir>/data/schema/$1"
      ],
      "^@sq-data/(.*)$": [
        "<rootDir>/data/$1"
      ],
      "^@sq-enum/(.*)$": [
        "<rootDir>/shared/enums/$1"
      ],
      "^@sq-shared/(.*)$": [
        "<rootDir>/shared/$1"
      ],
      "^@sq-interface/(.*)$": [
        "<rootDir>/shared/interfaces/$1"
      ],
      "^@sq-decorators/(.*)$": [
        "<rootDir>/shared/decorators/$1"
      ],
      "^@sq-services/(.*)$": [
        "<rootDir>/shared/services/$1"
      ],
      "^@sq-integrations/(.*)$": [
        "<rootDir>/integrations/$1"
      ],
      "^@sq-features/(.*)$": [
        "<rootDir>/features/$1"
      ]
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "verbose": false,
    "testTimeout": 60000
  }
}
